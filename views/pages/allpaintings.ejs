<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>
            <h1>All Paintings</h1>
            <div class="container allPaintings">
                <% locals.paintings.forEach((painting, index)=> { %>

                    <div class="paintDiv">
                        <a href="/paintings/<%= index %>">
                            <h3>
                                <%= painting.name %>
                            </h3>
                        </a>
                        <h4>
                            <%= painting.painter_name %>, <%= painting.year %>
                        </h4>
                        <div class="imgContainer"><img src="<%=painting.image_url %>" alt="the painting" width="150px">
                        </div>

                    </div>
                    <% }) %>
            </div>
            <%- include('../partials/footer.ejs') %>
    </body>


</html>