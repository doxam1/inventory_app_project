<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>
            <h1>All Painters</h1>
            <div class="container allPainters">
                <% locals.painters.forEach((painter, index)=> { %>
                    <div class="painterDiv">
                        <h3>
                            <a href="/painters/<%= index+1 %>">
                                <%= painter.name %>
                            </a>
                        </h3>
                        <div class="imgContainer"><img src="<%= painter.image_url %>" alt="the painter" width="150px">
                        </div>
                    </div>
                    <% }) %>
            </div>
            <%- include('../partials/footer.ejs') %>
    </body>


</html>